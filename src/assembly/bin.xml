<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/release</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README</include>
				<include>LICENSE</include>
				<include>INSTALL</include>
				<include>webspa.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>webspa-${project.version}.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../documentation/01-specification-guide</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>00-web-spa-*-guide.pdf</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../documentation/02-admin-guide</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>00-web-spa-*-guide.pdf</include>
			</includes>
		</fileSet>
				<fileSet>
			<directory>${project.basedir}/../documentation/03-user-guide</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>00-web-spa-*-guide.pdf</include>
			</includes>
		</fileSet>
		
	</fileSets>
</assembly>